<!-- This is the header syntax -->
<link rel="stylesheet" href="/css/header.css">
<div>
    <div class="navBar" style="background-color: rgb(242, 126, 25);">
        <div class="nameOfApp"><a href="/" style="color: lightgray;">.  Emp Review System</a></div>
        <% if (locals.user){ %>
            <%if(locals.user.isAdmin){%>
                <div class="logOut">
                    
                    <a href="/admin/assignWork"> <small>Assign Work</small> </a>
                    <a href="/admin/view-employee"> <small>Employees</small> </a>
                    <a href="/admin/add-employee"> <small> Add Employee </small> </a>
                    <a href="/users/sign-out" > <small>LogOut </a> </small>
                    <span class="nameOfUser"><%= locals.user.name%> <span style="color: black; font-weight: lighter;">(admin)</span> </span> 
                </div>
            <%}else{%>    
                
                <div class="logOut"> 
                <a href="/users/sign-out" > <small>LogOut</small> </a> 
                <span class="nameOfUser"><%= locals.user.name%>  </span>
            </div>
            <%}%>
            
        <%} else { %>
            <div class="noUser">
                <ul>
                    <li> <a href="/users/sign-in"> Sign-In </a> </li>
                    <li>  <a href="/users/sign-up"> Sign-Up </a> </li>
                </ul>
            </div>
        
        <%}%>       
    </div>
</div> 